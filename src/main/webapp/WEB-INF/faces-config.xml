<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>usuarios</from-outcome>
            <to-view-id>/lista-usuarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>alta-usuario</from-outcome>
            <to-view-id>/alta-usuario.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>listaTareas</from-outcome>
            <to-view-id>/lista-tareas.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>detalleUsuario</from-outcome>
            <to-view-id>/detalleUsuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <application>
        <!--message-bundle>com.tareas</message-bundle-->
        <resource-bundle>
            <base-name>com.web.recursos.textos</base-name>
            <var>textos</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
</faces-config>
